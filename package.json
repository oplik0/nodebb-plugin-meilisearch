{
	"name": "nodebb-plugin-meilisearch",
	"version": "0.7.2",
	"description": "A plugin for integrating MeiliSearch with NodeBB",
	"main": "library.js",
	"scripts": {
		"lint": "eslint .",
		"lint:fix": "eslint . --fix"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/oplik0/nodebb-plugin-meilisearch"
	},
	"keywords": [
		"nodebb",
		"plugin",
		"meilisearch",
		"shell"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"author": {
		"name": "oplik0",
		"url": "https://github.com/oplik0"
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"git add"
		]
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/oplik0/nodebb-plugin-meilisearch/issues"
	},
	"readmeFilename": "README.md",
	"nbbpm": {
		"compatibility": "^1.18.0 || ^2.0.0 || ^3.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "19.6.0",
		"@commitlint/config-angular": "19.6.0",
		"@eslint/eslintrc": "^3.2.0",
		"@eslint/js": "^9.15.0",
		"dprint": "^0.47.5",
		"eslint": "9.16.0",
		"eslint-config-nodebb": "0.2.1",
		"eslint-plugin-import": "2.31.0",
		"husky": "9.1.7",
		"lint-staged": "15.2.10"
	},
	"dependencies": {
		"meilisearch": "^0.46.0"
	}
}